<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>
<?import at.fhhagenberg.sqelevator.gui.ElevatorController?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.fhhagenberg.sqelevator.gui.ElevatorController"
            prefHeight="400.0" prefWidth="600.0">

    <BorderPane>
        <top>
            <!-- Toptext -->
            <VBox alignment="CENTER">
                <children>
                    <Text fx:id="elevatorName" text="Loading...">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Text>
                    <Text fx:id="elevatorDirection">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Text>
                </children>
            </VBox>
        </top>
        <center>
            <AnchorPane>
                <!-- Manual mode -->
                <HBox alignment="CENTER" layoutX="200.0" layoutY="50.0" spacing="10">
                    <TextField fx:id="manualInput" prefWidth="40"/>
                    <ToggleButton onAction="#sendRequest" mnemonicParsing="false"  text="Send">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </ToggleButton>
                </HBox>

                <StackPane layoutX="34.0" layoutY="42.5" fx:id="gridContainer">
                </StackPane>

                <!-- Status texts (speed etc) -->
                <Pane layoutX="200.0" layoutY="150.0">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" layoutY="53.0">
                            <image>
                                <Image url="@icons8-weight-64.png"/>
                            </image>
                        </ImageView>
                        <Text layoutX="52.0" layoutY="81.0" strokeType="OUTSIDE" strokeWidth="0.0" fx:id="weight" text="0 kg">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Text>
                        <HBox alignment="CENTER" layoutY="105" spacing="10">
                            <ImageView fitHeight="40.0" fitWidth="40.0">
                                <image>
                                    <Image url="@icons8-speed-64.png"/>
                                </image>
                            </ImageView>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" fx:id="speed" text="0 ft/s">
                                <font>
                                    <Font name="System Bold" size="24.0"/>
                                </font>
                            </Text>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" fx:id="acceleration" text="0 ft/sÂ²"/>
                        </HBox>
                        <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="1.0">
                            <image>
                                <Image url="@icons8-open-door-50.png"/>
                            </image>
                        </ImageView>
                        <Text layoutX="49.0" layoutY="29.0" strokeType="OUTSIDE" strokeWidth="0.0" fx:id="doorStatus" text="OPEN">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Text>
                    </children>
                </Pane>
            </AnchorPane>
        </center>
    </BorderPane>

    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>

</AnchorPane>
